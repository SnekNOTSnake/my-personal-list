{
	"name": "my-personal-list",
	"description": "My personal anime tracking list",
	"version": "0.1.0",
	"scripts": {
		"start": "concurrently \"yarn start:renderer\" \"yarn start:main\" --kill-others",
		"start:main": "tsc && electron .",
		"start:renderer": "vite dev",
		"build": "yarn run typecheck && yarn build:renderer && yarn build:main",
		"build:main": "NODE_ENV=production tsc --build && NODE_ENV=production electron-builder --config .electron-builder.config.js",
		"build:renderer": "NODE_ENV=production vite build",
		"typecheck": "tsc --noEmit && tsc --noEmit --project packages/renderer",
		"test": "mocha"
	},
	"private": true,
	"author": "Akhmad Najmuddin <udintobe@gmail.com>",
	"license": "MIT",
	"main": "dist/main/index.js",
	"dependencies": {
		"@fontsource/roboto": "^4.5.3",
		"chart.js": "^3.7.1",
		"electron-store": "^8.0.1",
		"nanoid": "^3.3.1",
		"prettier": "^2.5.1",
		"react": "^17.0.2",
		"react-chartjs-2": "^4.0.1",
		"react-dom": "^17.0.2",
		"react-icons": "^4.3.1",
		"react-router-dom": "^6.2.2",
		"recoil": "^0.6.1"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/prettier": "^2.4.4",
		"@types/react": "^17.0.33",
		"@types/react-dom": "^17.0.10",
		"@vitejs/plugin-react": "^1.0.7",
		"concurrently": "^7.0.0",
		"electron": "17.0.1",
		"electron-builder": "^22.14.13",
		"electron-devtools-installer": "^3.2.0",
		"expect": "^27.5.1",
		"mocha": "^9.2.1",
		"ts-node": "^10.7.0",
		"typescript": "^4.5.4",
		"vite": "^2.8.0",
		"vite-plugin-resolve": "^1.8.0"
	}
}
